<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:vbox="http://schemas.android.com/apk/res/com.kedzie.vbox" 
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:layout_weight="1" >
	   
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView  style="@style/SmallText"  android:text="Base Memory:" android:layout_gravity="left" />
			<SeekBar android:id="@+id/baseMemory"  android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView  style="@style/SmallText"   android:text="Processors:"  android:layout_gravity="left"  />
			<SeekBar android:id="@+id/processors"  android:layout_weight="1"/>
		</LinearLayout>

</LinearLayout>